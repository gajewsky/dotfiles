# Try tool
[".local/bin/try"]
    type = "file"
    url = "https://raw.githubusercontent.com/tobi/try/master/try.rb"
    executable = true
    refreshPeriod = "168h"

{{- $dotClaudeSource := joinPath .chezmoi.sourceDir "dot_claude" -}}
{{- $dotClaudeStat := stat $dotClaudeSource -}}
{{- $hasLocalClaude := and $dotClaudeStat $dotClaudeStat.isDir -}}
{{ if and (eq .chezmoi.os "darwin") (not $hasLocalClaude) -}}
# Work-specific Claude config (skills, commands, etc.)
# Only deployed on macOS (work machine)
# Source: https://github.com/gajewsky/dotfiles-work (private repo)
# Uses SSH auth to avoid persisting tokens locally
[".claude"]
    type = "git-repo"
    url = "git@github.com:gajewsky/dotfiles-work.git"
    ref = "main"
    exact = false
{{ end -}}
