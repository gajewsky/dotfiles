[color]
  ui = true
[core]
  autocrlf = false
  editor = nvim
  eol = lf
  excludesfile = ~/.gitignore
  filemode = false
	commitGraph = true
[github]
  user = gajewsky
[user]
	name = Marcin Gajewski
	email = gajewski@pm.me
[pull]
  ff = only
[link]
  path= $HOME/.gitconfig-fragile
[diff]
  algorithm = patience
[gc]
	writeCommitGraph = true
[protocol]
	version = 2
[credential]
	helper =
	helper = store --file /opt/dev/var/private/git_credential_store
[pager]
	diff = delta
  show = delta
  log = delta
  blame = delta
  reflog = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = tree
  syntax-theme = gruvbox-dark
